<html>

<head>
    <title>
        <%= locals.APPNAME %>
            <%= locals.VERSION %> - Register
    </title>
    <%- include('_inc_head') %>
        <link href="css/index.css" rel="stylesheet" />
</head>

<body>

    <div id="mainForm" class="col-lg-3 col-sm-12">
        <img src="images/icon.png" width="50%" />
        <h1 class="text-center">
            Register here .
        </h1>
        <form action="./createaccount" method="post">
            <div class="row">
                <div class="col-10 offset-1">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><span class="fa fa-user"></span></div>
                        </div>
                        <input type="text" name="name" class="form-control" placeholder="User name" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-10 offset-1">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><span class="fa fa-user"></span></div>
                        </div>
                        <input type="text" name="email" class="form-control" placeholder="User mail" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-10 offset-1">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><span class="fa fa-key"></span></div>
                        </div>
                        <input type="password" name="password" class="form-control" placeholder="Password" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-10 offset-1">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><span class="fa fa-key"></span></div>
                        </div>
                        <input type="password" name="confirm" class="form-control"
                            placeholder="Password confirmation" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-10 offset-1">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><span class="fa fa-users"></span></div>
                        </div>
                        <input type="text" name="teamname" class="form-control" placeholder="Team Name" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-10 offset-1">
                    <% if ( locals.errorMsg ) { %>
                        <div class="alert alert-danger">
                            <%= locals.errorMsg %>
                        </div>
                        <% } %>
                </div>
            </div>
            <div class="row">
                <div class="col-6 offset-1">
                    <a href="/">Login</a>
                </div>
                <div class="col-4">
                    <input type="submit" class="btn btn-primary btn-block" value="Register" />
                </div>
            </div>
        </form>
    </div>

</body>

</html>